<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="splashAnimateVM" type="com.flightsexpert.app.modules.splashanimate.data.viewmodel.SplashAnimateVM"/>
    </data>
    <LinearLayout android:id="@+id/linear"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <HorizontalScrollView android:fillViewport="true"
            android:id="@+id/horizontalScroll"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" android:scrollbars="none">
            <FrameLayout android:id="@+id/frame"
                android:layout_gravity="end"
                android:layout_height="wrap_content" android:layout_width="wrap_content">
                <FrameLayout android:background="@color/teal_300_ce"
                    android:id="@+id/frame1"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/_334px" android:layout_width="@dimen/_347px"/>
                <ImageView android:id="@+id/image"
                    android:layout_gravity="center|end"
                    android:layout_height="@dimen/_313px"
                    android:layout_width="@dimen/_560px"
                    android:scaleType="centerCrop" imageRes="@{@drawable/img_airindiaremovebgpreview_1_1}"/>
            </FrameLayout>
        </HorizontalScrollView>
        <TextView android:gravity="top|center"
            android:id="@+id/txtFlightSExper"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_45px"
            android:layout_width="match_parent"
            android:text="@{splashAnimateVM.splashAnimateModel.txtFlightSExper}" style="@style/textStyleMontserratbold36"/>
        <TextView android:gravity="top|center"
            android:id="@+id/txtWhatDoYouKno"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5px"
            android:layout_marginTop="@dimen/_8px"
            android:layout_width="match_parent"
            android:text="@{splashAnimateVM.splashAnimateModel.txtWhatDoYouKno}" style="@style/textStylePoppinssemibold18"/>
        <androidx.appcompat.widget.AppCompatButton
            android:clickable="true" android:gravity="center"
            android:id="@+id/btnGetStarted"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16px"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_19px"
            android:paddingEnd="@dimen/_30px"
            android:paddingStart="@dimen/_30px"
            android:paddingTop="@dimen/_12px"
            android:text="@string/lbl_get_started" style="@style/textStyleMontserratbold18"/>
    </LinearLayout>
</layout>

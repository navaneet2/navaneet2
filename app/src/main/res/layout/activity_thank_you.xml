<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="thankYouVM" type="com.flightsexpert.app.modules.thankyou.data.viewmodel.ThankYouVM"/>
    </data>
    <LinearLayout android:id="@+id/linear"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <HorizontalScrollView android:fillViewport="true"
            android:id="@+id/horizontalScroll"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" android:scrollbars="none">
            <FrameLayout android:id="@+id/frame"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" android:layout_width="wrap_content">
                <androidx.appcompat.widget.AppCompatButton
                    android:gravity="center"
                    android:id="@+id/btnThankYou"
                    android:layout_gravity="top|start"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_80px"
                    android:layout_width="match_parent"
                    android:text="@string/lbl_thank_you" style="@style/textStyleMontserratbold48"/>
                <ImageView android:id="@+id/image"
                    android:layout_gravity="top|end"
                    android:layout_height="@dimen/_242px"
                    android:layout_marginBottom="@dimen/_80px"
                    android:layout_marginTop="@dimen/_23px"
                    android:layout_width="@dimen/_336px"
                    android:scaleType="centerCrop" imageRes="@{@drawable/img_rectangle}"/>
                <View android:background="@color/cyan_700"
                    android:id="@+id/line"
                    android:layout_gravity="top|start"
                    android:layout_height="@dimen/_2px"
                    android:layout_marginBottom="@dimen/_80px"
                    android:layout_marginStart="@dimen/_14px"
                    android:layout_marginTop="@dimen/_78px" android:layout_width="@dimen/_276px"/>
                <ImageView android:id="@+id/image1"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/_223px"
                    android:layout_width="@dimen/_337px"
                    android:scaleType="centerCrop" imageRes="@{@drawable/img_105664467vectorfivestarsmarkisolatedonwhitebackgroundillustrationflatdesignelementremovebgpreview_1}"/>
                <ImageView android:id="@+id/image2"
                    android:layout_gravity="bottom|end"
                    android:layout_height="@dimen/_338px"
                    android:layout_marginEnd="@dimen/_13px"
                    android:layout_marginTop="@dimen/_80px"
                    android:layout_width="@dimen/_236px" imageRes="@{@drawable/img_humaaans_sitting2}"/>
            </FrameLayout>
        </HorizontalScrollView>
    </LinearLayout>
</layout>

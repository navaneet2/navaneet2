<?xml version="1.0" encoding="UTF-8"?>
<manifest package="com.flightsexpert.app" xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name" android:largeHeap="true"
        android:name="com.flightsexpert.app.appcomponents.di.MyApp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true" android:theme="@style/Theme.MyApp" android:usesCleartextTraffic="true">
        <activity
            android:name="com.flightsexpert.app.modules.rateus.ui.RateUsActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.flightsexpert.app.modules.destination.ui.DestinationActivity" android:screenOrientation="portrait"/>
        <activity
            android:name="com.flightsexpert.app.modules.splashanimate.ui.SplashAnimateActivity" android:screenOrientation="portrait"/>
        <activity
            android:name="com.flightsexpert.app.modules.thankyou.ui.ThankYouActivity" android:screenOrientation="portrait"/>
        <activity
            android:name="com.flightsexpert.app.modules.history1.ui.History1Activity" android:screenOrientation="portrait"/>
        <activity
            android:name="com.flightsexpert.app.modules.evolutionoflogo.ui.EvolutionOfLogoActivity" android:screenOrientation="portrait"/>
        <activity
            android:name="com.flightsexpert.app.modules.loginanimate3.ui.LoginAnimate3Activity" android:screenOrientation="portrait"/>
        <activity
            android:name="com.flightsexpert.app.modules.dashboardanimate.ui.DashboardAnimateActivity" android:screenOrientation="portrait"/>
        <activity
            android:name="com.flightsexpert.app.modules.aboutairindia.ui.AboutAirIndiaActivity" android:screenOrientation="portrait"/>
    </application>
</manifest>
